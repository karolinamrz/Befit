@model BeFit.Models.ExerciseType
@{
    ViewData["Title"] = "Usuń Ćwiczenie";
}

<h1>Usuń Ćwiczenie</h1>

<div class="alert alert-warning">
    <h4>Czy na pewno chcesz usunąć to ćwiczenie?</h4>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <p class="card-text">@Model.Description</p>
                }
                @if (!string.IsNullOrEmpty(Model.MuscleGroup))
                {
                    <span class="badge bg-primary">@Model.MuscleGroup</span>
                }
            </div>
        </div>

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Usuń</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Anuluj</a>
        </form>
    </div>
</div>